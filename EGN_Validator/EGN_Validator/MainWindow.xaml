<Window x:Class="EGN_Validator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EGN_Validator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="validate" Content="Validate" HorizontalAlignment="Left" Height="50" FontSize="24" Margin="10,65,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="250" Click="validate_Click"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" TextAlignment="Center" VerticalContentAlignment="Center" TextWrapping="WrapWithOverflow" Text="Enter EGN" FontSize="24" VerticalAlignment="Top" Width="250"/>
        <TextBlock x:Name="output" HorizontalAlignment="Left" Margin="10,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="24" Height="189" Width="497"/>

    </Grid>
</Window>
